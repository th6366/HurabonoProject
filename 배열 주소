#include <stdio.h>
void main()
{
 int arr[3][2];
 
 printf("arr[3][2] \n\n");
 
 printf("arr       : (%d)\n", arr);
 printf("arr[0]+1  : (%d)\n", arr[0]+1);
 printf("(arr+0)   : (%d)\n", (arr+0));
 printf("(arr+0)+1 : (%d)\n", (arr+0)+1);
 printf("arr+1     : (%d)\n\n", arr+1);
 printf("\
            *(arr+0)+0 : (%d) \n\
            *(arr+0)+1 : (%d) \n\
            *(arr+1)+0 : (%d) \n\
            *(arr+1)+1 : (%d) \n\
            *(arr+2)+0 : (%d) \n\
            *(arr+2)+1 : (%d) \n",
            *(arr+0)+0,
            *(arr+0)+1,
            *(arr+1)+0,
            *(arr+1)+1,
            *(arr+2)+0,
            *(arr+2)+1);
}
