#include "stdafx.h"#include "stdlib.h"#include "math.h"typedef struct { float x, y;}POINT;float distance(POINT a, POINT b);POINT midpoint(POINT a, POINT b);void main(){ POINT dis1, dis2; //좌표 값 2개. POINT midResult; //중점 값. float disResult; //거리 결과 값. printf("좌표값을 입력하세요 : "); scanf("%f%f", &dis1.x, &dis1.y); printf("좌표값을 입력하세요 : "); scanf("%f%f", &dis2.x, &dis2.y); disResult = distance(dis1, dis2); //거리 값 반환. midResult = midpoint(dis1, dis2); //중점 값 반환. printf("distance : %.2f, midpoint : (%.2f, %.2f) \n", disResult, midResult.x, midResult.y); system("pause");}float distance(POINT a, POINT b){ float side1, side2; //두 변. float result; //결과 값. if (a.x > b.x) side1 = a.x - b.x; //큰 수에서 작은 수 뺄셈연산. else side1 = b.x - a.x; if (a.y > b.y) side2 = a.y - b.y; //큰 수에서 작은 수 뺄셈연산. else side2 = b.y - a.y; result = sqrt((side1 * side1) + (side2 * side2)); return result; }POINT midpoint(POINT a, POINT b){ POINT result; //결과 값. result.x = (a.x + b.x) / 2; //좌표 x를 더한 후 2로 나눔(중점 좌표 값 공식). result.y = (a.y + b.y) / 2; //좌표 y를 더한 후 2로 나눔(중점 좌표 값 공식). return result;}
