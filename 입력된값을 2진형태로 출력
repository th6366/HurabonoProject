#include <stdio.h>
static int weight[32];

int * blockWeight(int a)
{
  int n = 0;
  int mask = 1;

  for (n = 0; n < 32; n++)
  {
    weight[n] = (a >> 31) & mask;
    a = a << 1;
  }
  return weight;
}

int main(int argc, char **argv)
{
  int i = 1;
  int *w;

  w = blockWeight(argv[1]);
  for (i = 0; i < 32; i++)
  {
    printf("%d", w[i]);
    if ((i+1)%8 == 0) printf(" ");
  }
  printf("\n");
}
