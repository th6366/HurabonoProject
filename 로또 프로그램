#include <iostream>#include <time.h>#include <stdlib.h>using namespace std;int main(){ int lotto_num[6]; int lotto_bonus; bool bbb = true; cout << "로또 행운 번호 생성기" << endl << endl; srand( (unsigned)time( NULL ) );  while (bbb) {  bbb = false;  // 6개의 배열안에 각각 랜덤함 숫자 저장  for (int i=0; i < 6; i++) {   lotto_num[i] = rand() % 46;  }  lotto_bonus = rand() % 46;    // 6개의 배열안에 숫자 0이 있는지 모두 확인  for (int zero=0; zero < 6; zero++) {   while (lotto_num[zero] == 0) {        lotto_num[zero] = rand() % 46;   }  }  // 보너스번호도 숫자가 0인지 확인하고  // 0이면 다른숫자를 저장하도록 한다.  while (lotto_bonus == 0) {      lotto_bonus = rand() % 46;  }    // 6개의 배열안에 중복된 숫자가 있는지 확인  for (int z=0; z < 6; z++) {      for (int a=0; a < 6; a++) {        if (z == a)      continue;        if ( lotto_num[z] == lotto_num[a] )     bbb = true;   }    } }  // 6개의 숫자를 오름차순으로 정렬한다. // 오른쪽으로 갈수록 숫자가 커짐 for(int q=0; q<6; q++) {  for(int w=0; w <6; w++)   {    if(lotto_num[q] < lotto_num[w])    {     int temp = lotto_num[q];     lotto_num[q] = lotto_num[w];     lotto_num[w] = temp;   }   } }       // 로또 행운 숫자 화면에 출력 for (int f=0; f < 6; f++) {  cout << lotto_num[f] << "  " ; } cout << endl; cout << "보너스번호 : " << lotto_bonus << endl << endl;   return 0;}
