#include "stdafx.h"#include "stdlib.h"typedef struct node { char name[20]; //이름. char id[20]; //아이디. int salary; //급여. struct node *next; //구조체 자신을 가리키는 포인터.}NODE;void main(){ NODE *head, *input_temp, *output_temp; int sum = 0; //전체 급여.  double avg; //전체급여의 평균. int i; head = (NODE *)malloc(sizeof(NODE)); output_temp = head; input_temp = head; for (i = 0; i < 5; i++) {  printf("직원의 이름, 아이디, 급여 순으로 입력하세요 (총 5명): ");  scanf("%s %s %d", input_temp->name, input_temp->id, &input_temp->salary);  sum += input_temp->salary;  input_temp->next = (NODE *)malloc(sizeof(NODE));  input_temp = input_temp->next; } avg = (double)sum / 5; for (i = 0; i < 5; i++) {  if (output_temp->salary >= avg) {   printf("아이디 : %s, 급여 : %d\n", output_temp->id, output_temp->salary);  }  output_temp = output_temp->next; } system("pause");}
